RewriteEngine OnRewriteBase /# 1. TESTE DE VIDA: Se acessar /google, vai para o Google?# (Isso serve para sabermos se o Rewrite está ligado mesmo. Depois apagamos)RewriteRule ^google$ https://www.google.com [R,L]# 2. Esconde o .html da barra de endereços (Se digitar com .html, remove)RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]RewriteRule ^ /%1 [R=301,L,NE]# 3. Adiciona o .html internamente (Onde a mágica acontece)# Se o arquivo não for um diretório (!-d)RewriteCond %{REQUEST_FILENAME} !-d# E se o arquivo com .html existir (-f)RewriteCond %{DOCUMENT_ROOT}/$1.html -f# Então reescreveRewriteRule ^(.+?)/?$ $1.html [L]