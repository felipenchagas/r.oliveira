# Desabilita MultiViews (pode causar conflitos)Options -MultiViews -IndexesRewriteEngine OnRewriteBase /DirectoryIndex index.html index.php# 2. REMOVER EXTENSÃO DA BARRA DE ENDEREÇOS (Visual)# Remove .htmlRewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]RewriteRule ^ /%1 [R=301,L,NE]# Remove .phpRewriteCond %{THE_REQUEST} \s/+(.+?)\.php[\s?] [NC]RewriteRule ^ /%1 [R=301,L,NE]# 3. FAZER A URL FUNCIONAR (Interno)# Se não for pasta nem arquivo, tenta achar .phpRewriteCond %{REQUEST_FILENAME} !-dRewriteCond %{REQUEST_FILENAME} !-fRewriteCond %{REQUEST_FILENAME}.php -fRewriteRule ^(.+)$ $1.php [L,QSA]# Se não achou .php, tenta achar .htmlRewriteCond %{REQUEST_FILENAME} !-dRewriteCond %{REQUEST_FILENAME} !-fRewriteCond %{REQUEST_FILENAME}.html -fRewriteRule ^(.+)$ $1.html [L,QSA]