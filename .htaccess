DirectoryIndex index.htmlOptions -MultiViewsRewriteEngine On# HTTPSRewriteCond %{HTTPS} !=onRewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]# NÃO mexe no envia.php (evita dor de cabeça com formulário/POST)RewriteRule ^envia\.php$ - [L]# Remove .html da URL (quando o navegador pedir com .html)RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]RewriteRule ^ %1 [R=301,L]# Se for arquivo/pasta real, não reescreveRewriteCond %{REQUEST_FILENAME} -f [OR]RewriteCond %{REQUEST_FILENAME} -dRewriteRule ^ - [L]# URL amigável -> .html (com ou sem barra no final)RewriteCond %{DOCUMENT_ROOT}/$1.html -fRewriteRule ^(.+?)/?$ $1.html [L]