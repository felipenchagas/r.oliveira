RewriteEngine OnRewriteBase /DirectoryIndex index.html index.php# 1. For√ßar HTTPSRewriteCond %{HTTPS} offRewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]# 2. Remover .html visualmenteRewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]RewriteRule ^ /%1 [R=301,L,NE]# 3. Remover .php visualmenteRewriteCond %{THE_REQUEST} \s/+(.+?)\.php[\s?] [NC]RewriteRule ^ /%1 [R=301,L,NE]# 4. Funcionar internamenteRewriteCond %{REQUEST_FILENAME} !-dRewriteCond %{REQUEST_FILENAME}.html -fRewriteRule ^(.+)$ $1.html [L,QSA]RewriteCond %{REQUEST_FILENAME} !-dRewriteCond %{REQUEST_FILENAME}.php -fRewriteRule ^(.+)$ $1.php [L,QSA]