<IfModule mod_rewrite.c>    RewriteEngine On    RewriteBase /        # Desativa MultiViews para evitar conflitos internos    Options -MultiViews    # 1. Se o usuário digitar "contato.html", remove o .html da barra de endereço    RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]    RewriteRule ^ /%1 [R=301,L,NE]    # 2. Se o usuário acessar "/contato", o servidor entrega o arquivo "contato.html"    RewriteCond %{REQUEST_FILENAME} !-d    RewriteCond %{REQUEST_FILENAME}.html -f    RewriteRule ^(.+?)/?$ $1.html [L]</IfModule>